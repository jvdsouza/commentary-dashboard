{
  "name": "commentary-dashboard-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Esports commentary dashboard with BFF backend and smart caching",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:frontend": "pnpm --filter @commentary/frontend dev",
    "dev:backend": "pnpm --filter @commentary/backend dev",
    "build": "pnpm -r run build",
    "build:frontend": "pnpm --filter @commentary/frontend build",
    "build:backend": "pnpm --filter @commentary/backend build",
    "build:shared": "pnpm --filter @commentary/shared build",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r exec rm -rf node_modules dist",
    "clean:install": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
