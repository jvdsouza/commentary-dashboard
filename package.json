{
  "name": "commentary-dashboard-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Esports commentary dashboard with BFF backend and smart caching",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:frontend": "npm run dev -w @commentary/frontend",
    "dev:backend": "npm run dev -w @commentary/backend",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build -w @commentary/frontend",
    "build:backend": "npm run build -w @commentary/backend",
    "lint": "npm run lint --workspaces --if-present",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
